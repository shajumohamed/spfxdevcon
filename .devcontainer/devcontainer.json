{
	"name": "SPFx Container",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"GULP_CLI_VERSION": "2",
			"YO_VERSION": "latest",
			"SPFX_GENERATOR_VERSION": "1.20.0",
			"NODE_VERSION": "18.20.4"
		}
	},
	"settings": {},
	"extensions": [
		"editorconfig.editorconfig",
		"dbaeumer.vscode-eslint"
	],
	"forwardPorts": [
		4321,
		35729,
		5432
	],
	"portsAttributes": {
		"4321": {
			"protocol": "https",
			"label": "Manifest",
			"onAutoForward": "silent",
			"requireLocalPort": true
		},
		"5432": {
			"protocol": "https",
			"label": "Workbench",
			"onAutoForward": "silent"
		},
		"35729": {
			"protocol": "https",
			"label": "LiveReload",
			"onAutoForward": "silent",
			"requireLocalPort": true
		}
	},
	"remoteUser": "spfx",
	"postCreateCommand": "bash .devcontainer/post-create.sh"
}